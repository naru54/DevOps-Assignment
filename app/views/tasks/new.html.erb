<h2>New Task</h2>
<%= form_with model: @task, url: tasks_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.submit "Create Task" %>
  </div>
<% end %>
<%= link_to "Back to Tasks", tasks_path %>

